/* pages/cust-count/cust-count.wxss */
page{
  height: 100%;
  width: 100%;
  background-color: #f5f7fa;
}
.container{
  justify-content: initial;
  margin: 0 30.42rpx 0 37.44rpx;
}
.header{
  width: 100%;
  justify-content: space-around;
  display: flex;
}
.header .nav{
  width: 50%;
  height: 107.64rpx;
  justify-content: space-around;
  display: flex;
  align-items:center;
}
.back-color-white{
  background-color: #fff;
}
.border-bottom{
  padding: 14.04rpx 44.46rpx;
  border-bottom: 7.02rpx solid #37bd64;
}
.content{
  width: 100%;
}
.content .items{
  width: 100%;
  height: 100%;
  color: #9fa1b2;
  background-color: #fff;
	opacity: 0.8;
  padding: 42.12rpx 0 32.76rpx;
  margin-bottom: 21.06rpx;
}
.content .items .title{
  font-size: 28.08rpx;
  margin-left:51.48rpx;
}
.content .items .count{
  font-size: 72.54rpx;
  margin-left: 39.78rpx;
  color: #686c9d;
}
.content .items .info{
  font-size: 21.06rpx;
  margin-left: 49.14rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.content .items .info view{
  font-size: 30.42rpx;
  flex-wrap: nowrap;
  margin: 0 42.12rpx 0 21.06rpx;
}
.content .items .info .num1{
  color: #37bd64;
}
.content .items .info .num2{
  color: #4688f4;
}
.content .items .info .num3{
  color: #fd6979;
}



