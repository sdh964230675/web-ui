/* pages/charts/charts.wxss */
.container{
  width: 100%;
  height: 100%;
}
.header{
  width: 100%;
  height: 81.9rpx;
  display: flex;
  background-color: #f0f0f0;
  border-bottom: #d2d2d2 4.68rpx solid;
  align-items: center;
  font-size: 28.08rpx;
}
.header view{
  width: 35%;
  text-align: center;
}
.content{
  width: 100%;
  border-top: #dedede 4.68rpx solid; 
}
.content .rows{
  width: 100%;
  display: flex;  
  align-items: center;
  border-top: 4.68rpx solid #dedede;
}
.content .rows .staff image{
  margin-right:16.38rpx;
  flex-shrink: 0;
  width:28px;
  height:27px;
}
.content .rows .staff{
  justify-content: left;
  width: 40%;
}
.content .rows view{
  font-size: 23.4rpx;
  width: 35%;
  justify-content: center;
  align-items: center;
  display: flex;
  margin: 16.38rpx;
}
.no-more-goods{
  text-align: center;
  font-size: 24rpx;
  padding-bottom:48rpx; 
  color: #999;
}
.more-goods{
  text-align: center;
	font-size: 30.42rpx;
	color: #404352;
  margin-top:35.1rpx;
}